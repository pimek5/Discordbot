# Dockerfile for Creator Bot
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY creator_requirements.txt .
RUN pip install --no-cache-dir -r creator_requirements.txt

# Copy bot files
COPY creator_bot.py .
COPY creator_database.py .
COPY creator_scraper.py .
COPY creator_commands.py .
COPY permissions.py .

# Run creator bot
CMD ["python", "creator_bot.py"]
